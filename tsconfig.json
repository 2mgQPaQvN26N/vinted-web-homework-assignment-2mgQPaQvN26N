{
    "compilerOptions": {
        "baseUrl": "./src/components",
        "allowJs": true,
        "sourceMap": true,
        "target": "ES6",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "jsx": "react",
        "skipLibCheck": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "src/components/**/*",
    ],
}
